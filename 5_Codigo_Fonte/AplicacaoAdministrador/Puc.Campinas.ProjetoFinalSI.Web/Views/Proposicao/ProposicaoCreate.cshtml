@model Puc.Campinas.ProjetoFinalSI.Web.Models.ProposicaoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">

    $(function ($) {
        $("#DtApresentacao").mask("99/99/9999");
    });

</script>
<h4>
    <a class="migalha_pao_inicio" href="@Url.Action("Index", "Home")"> Painel de controle </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" alt=""/> </a>
    <a class="migalha_pao_meio" href="@Url.Action("Index", "Proposicao")"> Manutenção de proposições </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" alt="" /> </a>
    <a class="migalha_pao_fim" href="#"> Incluir proposição </a>

</h4>
@using (Html.BeginForm("Create", "Proposicao", FormMethod.Post, new { id = "frmCreateProposicao" }))
{   
    @Html.ValidationSummary(false);
    @Html.Hidden("IdProposicao", Model.IdProposicao)
    @Html.Hidden("IdMandato", Model.IdMandato)


        <div class="editor-label">
        @Html.Label("Nome do Político: ")
        </div>   
     
                <div class="editor-field">
                     @Html.TextBoxFor(x => x.NomePolitico, new { @maxlength = "100", @style = "width:520px;", @id = "txtDocumento", @disabled = "disabled" })
                </div>
                <br /> 
    
  
    <div class="editor-label">
        @Html.Label("* Tipo: ")
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(x => x.IdTipo, new SelectList(Model.ListTipo, "IdTipoProposicao", "Nome"), "Selecione ...", new { @style = "width:350px;", @id = "ddlTipo" })
    </div>
    <div class="editor-label">
        @Html.Label("* Número: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Numero, new { @maxlength = "14", @style = "width:118px;"})
    </div>
    <div class="editor-label">
        @Html.Label("* Ano: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Ano, new { @maxlength = "14", @style = "width:118px;"})
    </div>

    <div class="editor-label">
        @Html.Label("* Situação: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Situacao, new { @maxlength = "14", @style = "width:118px;"})
    </div>
    <br />
    <div class="editor-label">
        @Html.Label("* Ementa: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Ementa, new { @maxlength = "250", @style = "width:520px;" })
    </div>
    <br />
    <div class="editor-label">
        @Html.Label("* Data da Apresentação: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.DtApresentacao, new { @style = "width:120px" })
    </div>
          


    <br />
    <br />
    
    <div id="botoesInferiores" align="right">
        <table>
            <tr>
                <td>
                    <a class="bt_blue" href="#" onclick="location.href='@Url.Action("Index", "Proposicao")'">
                        <span class="bt_blue_lft"></span><strong>Voltar</strong> <span class="bt_blue_r">
                        </span></a>
                </td>
                <td>
                    <span>&nbsp &nbsp</span>
                </td>
                <td>
                    <a class="bt_blue" href="#" onclick="$('#frmCreateProposicao').submit();"><span class="bt_blue_lft">
                    </span><strong>Salvar</strong> <span class="bt_blue_r"></span></a>
                </td>
            </tr>
        </table>
    </div>    
}
