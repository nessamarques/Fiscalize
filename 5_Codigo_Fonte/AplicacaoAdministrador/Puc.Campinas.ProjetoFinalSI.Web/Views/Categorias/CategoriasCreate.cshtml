@model Puc.Campinas.ProjetoFinalSI.Web.Models.CategoriaModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h4>
    <a class="migalha_pao_inicio" href="@Url.Action("Index", "Home")"> Painel de controle </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" alt=""/> </a>
    <a class="migalha_pao_meio" href="@Url.Action("Index", "Categorias")"> Manutenção de categorias </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" alt=""/> </a>
    <a class="migalha_pao_fim" href="#"> Incluir categoria</a>
</h4>
@using (Html.BeginForm("Create", "Categorias", FormMethod.Post, new { id = "frmCreateCategorias" }))
{   
    @Html.ValidationSummary(false);
    @Html.Hidden("IdCategoria", Model.IdCategoria)    
     
    <fieldset style="margin:10px 5px 10px 5px;">
    <legend><b>Incluir categoria:</b></legend>

        <table>
            <tr>
                <td>@Html.Label("* Nome: ")</td>
                <td>@Html.TextBoxFor(x => x.Nome, new { @style = "width:500px; text-transform:uppercase;", @class = "input_text" })</td>
            </tr>
            <tr>
                <td>@Html.Label("* Descrição: ")</td>
                <td>@Html.TextAreaFor(x => x.Descricao, new { @style = "width:500px; height:80px; text-transform:uppercase;", @class = "textarea" })</td>
            </tr>
        </table>
    
        <div id="botoesInferiores" align="right">
        <br />
            <table>
                <tr>
                    <td>
                        <a class="bt_blue" href="#" onclick="location.href='@Url.Action("Index", "Categorias")'">
                        <span class="bt_blue_lft"></span><strong>Voltar</strong> <span class="bt_blue_r">
                        </span></a>
                    </td>
                    <td>
                        <span>&nbsp</span>
                    </td>
                    <td>
                        <a class="bt_blue" href="#" onclick="$('#frmCreateCategorias').submit();"><span class="bt_blue_lft">
                        </span><strong>Salvar</strong> <span class="bt_blue_r"></span></a>
                    </td>
                </tr>
            </table>
        </div>
    </fieldset>
}
