
@model Puc.Campinas.ProjetoFinalSI.Web.Models.CategoriaModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="../../Content/paging.js"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<link href="../../Content/paging.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">

    function excluirRegistro(idRegistro) {
        if (confirm('Tem certeza que deseja excluir este registro?')) {
            location.href = '@Url.Action("Delete", "Categorias")?id=' + idRegistro;
        }
    }

    function editarRegistro(idRegistro) {
        location.href = '@Url.Action("Edit", "Categorias")?id=' + idRegistro;
    }

    function detalharRegistro(idRegistro) {
        location.href = '@Url.Action("Details", "Categorias")?id=' + idRegistro;
    }

    function pesquisarRegistros(filtro) {
        location.href = '@Url.Action("PesquisarRegistros", "Categorias")?param=' + filtro;
    }

</script>
<h4>
    <a class="migalha_pao_inicio" href="@Url.Action("Index", "Home")"> Painel de controle </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" alt=""/> </a>
    <a class="migalha_pao_fim" href="@Url.Action("Index", "Categorias")"> Manutenção de categorias </a>
</h4>
<br />
<div style="float: left;">
    <a class="bt_blue" href="#" onclick="location.href='@Url.Action("Create", "Categorias")?idCategoria=' + @Model.IdCategoria">
        <span class="bt_blue_lft"></span><strong>Incluir Categoria</strong> <span class="bt_blue_r">
        </span></a>
</div>
<br />
<div class="sidebar_search" style="float: right;">
    <input type="text" id="txtFilter" name="" class="search_input" value="@Model.FiltroPesquisa"/>
    <input type="image" class="search_submit" src="../../Content/img/magnifier.png" onclick="pesquisarRegistros($('#txtFilter').val())" />
</div>
<br />


   <table id="rounded-corner">
        <thead>
            <tr>
                <th scope="col" class="rounded-company" style="width: 100%">
                    Categorias
                </th>
                <th scope="col" class="rounded">
                </th>
                <th scope="col" class="rounded">
                </th>
                <th scope="col" class="rounded-q4">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Puc.Campinas.ProjetoFinalSI.Entidade.Categoria item in Model.ListaCategoria)
            {  
                <tr>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        <a href="#" class="ask" onclick="detalharRegistro(@item.IdCategoria)">
                            <img src="../../Content/img/magnifier.png" alt="" title="" border="0" /></a>
                    </td>
                    <td>
                        <a href="#" onclick="editarRegistro(@item.IdCategoria)">
                            <img src="../../Content/img/edit.png" alt="" title="" border="0" /></a>
                    </td>
                    <td>
                        <a href="#" class="ask" onclick="excluirRegistro(@item.IdCategoria)">
                            <img src="../../Content/img/delete.png" alt="" title="" border="0" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- div onde será criados os links da paginação -->
    <br />
    <div id="pageNav" class="pagination" style="float: right;">
    </div>
    <script type="text/javascript">
        var pager = new Pager('rounded-corner', 5);
        pager.init();
        pager.showPageNav('pager', 'pageNav');
        pager.showPage(1);
    </script>
<br />
<div id="botoesInferiores" align="right" style="width: 103%;">
    <a class="bt_blue" href="#" onclick="location.href='@Url.Action("Index", "Categorias")'">
        <span class="bt_blue_lft"></span><strong>Voltar</strong> <span class="bt_blue_r">
        </span></a>
</div>
