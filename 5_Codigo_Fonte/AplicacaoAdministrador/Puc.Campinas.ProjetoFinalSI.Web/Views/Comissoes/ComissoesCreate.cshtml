@model Puc.Campinas.ProjetoFinalSI.Web.Models.ComissaoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">

    $(function ($) {
        $("#txtTelefone").mask("(99)9999-9999");
        $("#txtFax").mask("(99)9999-9999");
    });

</script>

<h4>
    <a class="migalha_pao_inicio" href="@Url.Action("Index", "Home")"> Painel de controle </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" alt=""/> </a>
    <a class="migalha_pao_meio" href="@Url.Action("Index", "Comissoes")"> Manutenção de comissões </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" alt=""/> </a>
    <a class="migalha_pao_fim" href="#"> Incluir comissões </a>
</h4>
@using (Html.BeginForm("Create", "Comissoes", FormMethod.Post, new { id = "frmCreateComissoes" }))
{   
    @Html.ValidationSummary(false);
    @Html.Hidden("IdComissao", Model.IdComissao)    
    
    <div class="editor-label">
        @Html.Label("* Comissão: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Nome, new { @style = "width:100%; text-transform:uppercase;" })
    </div>
    <br />
    <div class="editor-label">
        @Html.Label("* Sigla: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Sigla, new { @style = "width:50%; text-transform:uppercase;" })
    </div>
    <br />
    <div class="editor-label">
        @Html.Label("* Local: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Local, new { @style = "width:100%;" })
    </div>
    <br />
    <div class="editor-label">
        @Html.Label("* Telefone: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Telefone, new { @id = "txtTelefone", @style = "width:100px; text-transform:uppercase;" })
    </div>
        <br />
    <div class="editor-label">
        @Html.Label("* Fax: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Fax, new { @id = "txtFax", @style = "width:100px; text-transform:uppercase;" })
    </div>
        <br />
    <div class="editor-label">
        @Html.Label("* Secretário(a): ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Secretario, new { @style = "width:100%;" })
    </div>
    <br />
    <div id="botoesInferiores" align="right">
        <table>
            <tr>
                <td>
                    <a class="bt_blue" href="#" onclick="location.href='@Url.Action("Index", "Comissoes")'">
                    <span class="bt_blue_lft"></span><strong>Voltar</strong> <span class="bt_blue_r">
                    </span></a>
                </td>
                <td>
                    <span>&nbsp</span>
                </td>
                <td>
                    <a class="bt_blue" href="#" onclick="$('#frmCreateComissoes').submit();"><span class="bt_blue_lft">
                    </span><strong>Salvar</strong> <span class="bt_blue_r"></span></a>
                </td>
            </tr>
        </table>
    </div>         
}
