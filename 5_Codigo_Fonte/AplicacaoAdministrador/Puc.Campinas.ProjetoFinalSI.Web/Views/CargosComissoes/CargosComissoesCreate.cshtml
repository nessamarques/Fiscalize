@model Puc.Campinas.ProjetoFinalSI.Web.Models.CargoComissaoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h4>
    <a class="migalha_pao_inicio" href="@Url.Action("Index", "Home")"> Painel de controle </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" /> </a>
    <a class="migalha_pao_meio" href="@Url.Action("Index", "CargosComissoes")"> Manutenção de cargos em comissões </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" /> </a>
    <a class="migalha_pao_fim" href="#"> Incluir cargo de comissão</a>
</h4>
@using (Html.BeginForm("Create", "CargosComissoes", FormMethod.Post, new { id = "frmCreateCargosComissoes" }))
{   
    @Html.ValidationSummary(false);
    @Html.Hidden("IdCargoComissao", Model.IdCargoComissao)    
    
    <div class="editor-label">
        @Html.Label("* Cargo de comissão: ")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(x => x.Nome, new { @style = "width:100%; text-transform:uppercase;" })
    </div>
    <br />
    <div class="editor-label">
        @Html.Label("* Descrição: ")
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(x => x.Descricao, new { @style = "width:100%;" })
    </div>
    <br />
    <div id="botoesInferiores" align="right">
        <table>
            <tr>
                <td>
                    <a class="bt_blue" href="#" onclick="location.href='@Url.Action("Index", "CargosComissoes")'">
                    <span class="bt_blue_lft"></span><strong>Voltar</strong> <span class="bt_blue_r">
                    </span></a>
                </td>
                <td>
                    <span>&nbsp</span>
                </td>
                <td>
                    <a class="bt_blue" href="#" onclick="$('#frmCreateCargosComissoes').submit();"><span class="bt_blue_lft">
                    </span><strong>Salvar</strong> <span class="bt_blue_r"></span></a>
                </td>
            </tr>
        </table>
    </div>         
}
