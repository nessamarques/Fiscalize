@model Puc.Campinas.ProjetoFinalSI.Web.Models.AtividadeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="../../Content/paging.js"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<link href="../../Content/paging.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">

    function excluirRegistro(idRegistro) {
        if (confirm('Tem certeza que deseja excluir este registro?')) {
            location.href = '@Url.Action("Delete", "Atividades")?id=' + idRegistro;
        }
    }

    function editarRegistro(idRegistro) {
        location.href = '@Url.Action("Edit", "Atividades")?id=' + idRegistro;
    }

    function detalharRegistro(idRegistro) {
        location.href = '@Url.Action("Details", "Atividades")?id=' + idRegistro;
    }

</script>
<h4>
    <a class="migalha_pao_inicio" href="@Url.Action("Index", "Home")"> Painel de controle </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" /> </a>
    <a class="migalha_pao_meio" href="@Url.Action("Index", "Atividades")"> Manutenção de atividades </a>
    <a class="migalha_pao_proximo" href="#"> <img src="../../Content/img/arrow_right2.png" /> </a>
    <a class="migalha_pao_fim" href="#"> Pesquisar atividade </a>
</h4>
<br />
<div style="float: left;">
    <a class="bt_blue" href="#" onclick="location.href='@Url.Action("Create", "Atividades")?idPolitico=' + @Model.IdPolitico">
        <span class="bt_blue_lft"></span><strong>Incluir Atividade</strong> <span class="bt_blue_r">
        </span></a>
</div>
<br />
<fieldset style="width: 100%">
    <legend>Histórico e Manutenção de Atividades: </legend>
    <br />
    <table>
        <tr>
            <td>
                <b>@Html.Label("Político: ")</b>
            </td>
            <td>@Model.NomePolitico
            </td>
        </tr>
    </table>
    <br />
    <table id="rounded-corner">
        <thead>
            <tr>
                <th scope="col" class="rounded-company" style="width: 100%">
                    Atividades
                </th>
                <th scope="col" class="rounded">
                </th>
                <th scope="col" class="rounded">
                </th>
                <th scope="col" class="rounded-q4">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Puc.Campinas.ProjetoFinalSI.Entidade.Atividade item in Model.ListaAtividades)
            {  
                <tr>
                    <td>
                        @item.NomeComissao
                    </td>
                    <td>
                        <a href="#" class="ask" onclick="detalharRegistro(@item.IdAtividade)">
                            <img src="../../Content/img/magnifier.png" alt="" title="" border="0" /></a>
                    </td>
                    <td>
                        <a href="#" onclick="editarRegistro(@item.IdAtividade)">
                            <img src="../../Content/img/edit.png" alt="" title="" border="0" /></a>
                    </td>
                    <td>
                        <a href="#" class="ask" onclick="excluirRegistro(@item.IdAtividade)">
                            <img src="../../Content/img/delete.png" alt="" title="" border="0" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- div onde será criados os links da paginação -->
    <br />
    <div id="pageNav" class="pagination" style="float: right;">
    </div>
    <script type="text/javascript">
        var pager = new Pager('rounded-corner', 5);
        pager.init();
        pager.showPageNav('pager', 'pageNav');
        pager.showPage(1);
    </script>
</fieldset>
<br />
<div id="botoesInferiores" align="right" style="width: 103%;">
    <a class="bt_blue" href="#" onclick="location.href='@Url.Action("Index", "Atividades")'">
        <span class="bt_blue_lft"></span><strong>Voltar</strong> <span class="bt_blue_r">
        </span></a>
</div>
