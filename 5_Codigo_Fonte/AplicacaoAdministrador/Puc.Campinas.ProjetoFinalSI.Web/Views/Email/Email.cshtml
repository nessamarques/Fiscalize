@model Puc.Campinas.ProjetoFinalSI.Web.Models.EmailModel
@{
    ViewBag.Title = "Email";
}

<head>
    <link rel="stylesheet" href="../../Content/portal/css/layout.css" type="text/css" />
    <link rel="stylesheet" href="../../Content/portal/css/style.css" type="text/css" />
    <script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="../../Content/ddaccordion.js" type="text/javascript"></script>
    <script type="text/javascript" src="../../Content/paging.js"></script>
</head>

<center>
<div id="divBodyEmail" style="background-image: url(../../Content/portal/img/bg.png); width:750px; height:650px;">
<br />

<div style="margin:20px 20px 20px 20px; background-color:White; border-radius:15px; padding:20px 20px 20px 20px;" align="left">

<img src="../../Content/portal/img/logo.png" alt="logo" style="width:263px; height:68px; margin:20px 20px 0px 20px;"/>

<h2>Notícias da semana:</h2>
<label>Você está acompanhando os políticos:</label>

<ul>
  <li>ACELINO FREITAS</li>
  <li>MARINA PIGNATATO SANTANNA</li>
</ul>

<br />
<label><b>Últimas despesas de ACELINO FREITAS:</b></label>
<br /><br />
<table id="tbDespesas" style="margin-left: 10px; border:1px solid gainsboro;">
    <tr style="color: white; background-color: #30b6c9; font-size: 15px; font-weight: 500; line-height: 28px; margin: 10px; border:1px solid gainsboro;">
        <td style="width: 200px; text-align: center; ">
            <b>Descrição</b>
        </td>
        <td style="width: 250px; text-align: center;">
            <b>Fornecedor</b>
        </td>
        <td style="width: 80px; text-align: center; ">
            <b>Mês/Ano</b>
        </td>
        <td style="width: 80px; text-align: center;" colspan="2">
            <b>Valor Total</b>
        </td>
    </tr>

    @foreach (Puc.Campinas.ProjetoFinalSI.Entidade.Despesa d in Model.listaDespesasAcelino.OrderBy(x => x.Descricao))
    {        
        <tr style="height: 23px; border:1px solid gainsboro; font-size: 12px;">
            <td style="width: 200px; padding-left: 10px;">
                @d.Descricao
            </td>
            <td style="width: 250px; padding-left: 10px;">
                @d.NomeFornecedor
            </td>
            <td style="width: 80px; text-align: center; ">
                @d.MesDespesa/@d.AnoDespesa
            </td>
            <td style="width: 30px; text-align: right;">
                <b>R$</b>
            </td>
            <td style="width: 50px; text-align: right; padding-right: 10px;">
                <b>@String.Format("{0:C}", @d.Valor).ToString().Substring(2).Trim()</b>
            </td>
        </tr>                        
    }
</table>

<br /><br />
<label><b>Últimas Despesas de MARINA PIGNATATO SANTANNA:</b></label>
<br /><br />
    <table id="tbDespesas" style="margin-left: 10px; border:1px solid gainsboro;">
        <tr style="color: white; background-color: #30b6c9; font-size: 15px; font-weight: 500;
            padding-left: 20px; line-height: 28px; margin: 10px; border:1px solid gainsboro;">
            <td style="width: 200px; text-align: center;">
                <b>Descrição</b>
            </td>
            <td style="width: 250px; text-align: center;">
                <b>Fornecedor</b>
            </td>
            <td style="width: 80px; text-align: center; ">
                <b>Mês/Ano</b>
            </td>
            <td style="width: 80px; text-align: center;" colspan="2">
                <b>Valor Total</b>
            </td>
        </tr>
        @foreach (Puc.Campinas.ProjetoFinalSI.Entidade.Despesa d in Model.listaDespesasMarina.OrderBy(x => x.Descricao))
        {
            <tr style="height: 23px; border:1px solid gainsboro; font-size: 12px; border:1px solid gainsboro;">
                <td style="width: 200px; padding-left: 10px;">
                    @d.Descricao
                </td>
                <td style="width: 250px; padding-left: 10px;">
                    @d.NomeFornecedor
                </td>
                <td style="width: 80px; text-align: center; ">
                    @d.MesDespesa/@d.AnoDespesa
                </td>
                <td style="width: 30px; text-align: right;">
                    <b>R$</b>
                </td>
                <td style="width: 50px; text-align: right; padding-right: 10px;">
                    <b>@String.Format("{0:C}", @d.Valor).ToString().Substring(2).Trim()</b>
                </td>
            </tr>
                                    
        }
    </table>

<div id="divRodape" align="center">
    <br />
    Continue fiscalizando! Acesse o <a style="color:Black;">Fiscalize</a>
</div>
</div>
    Copyright © 2013 - <a style="color:Black;">Fiscalize</a> - Todos os Direitos Reservados.
    <br />
    <br />
</div>
</center>
